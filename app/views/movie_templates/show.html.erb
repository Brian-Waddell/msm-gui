<h1>
  Movie #<%= @the_movie.id %> details
</h1>

<a href="/movies">
  Go back
</a>

<div>
<a href = "/delete_movie/<%= @the_movie.id%>"> 
Delete Movie
 </a>
</div>
<hr>


<form action = "/update_movie_record/<%= @the_movie.id%>"> 
  <div>
    <label for = "movie_title"> Title </label>
    <input id = "movie_title" type = "text" name = "the_title" value= "<%= @the_movie.title %>"  >
  </div>
  <div>
    <label for = "movie_year"> Year </label>
    <input id = "movie_year" type = "text" name = "the_year" value = "<%= @the_movie.year %>" >
  </div>
  <div>
    <label for = "movie_duration"> Duration </label>
    <input id = "movie_duration" type = "text" name = "the_duration"  value = "<% @the_movie.duration%>" >
  </div>
  <div>
    <label for = "movie_description"> Description </label>
    <input id = "movie_description" type = "text" name = "the_description" value = "<%= @the_movie.description%>" >
  </div>
  <div>
    <label for = "movie_image"> Image </label>
    <input id = "movie_image" type = "text" name = "the_image"  value = "<%= @the_movie.image%>">
  </div>
  <div>
    <label for = "movie_director"> Director ID </label>
    <input id = "movie_director" type = "text" name = "the_director"  value = "<%= @the_movie.director_id%>" >
  </div>
<button> Update Movie </button>

</form>

<hr> 

<dl>
  <dt>
    Title
  </dt>
  <dd>
    <%= @the_movie.title %>
  </dd>

  <dt>
    Year
  </dt>
  <dd>
    <%= @the_movie.year %>
  </dd>

  <dt>
    Duration
  </dt>
  <dd>
    <%= @the_movie.duration %>
  </dd>

  <dt>
    Description
  </dt>
  <dd>
    <%= @the_movie.description %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @the_movie.image %>" style="width:250px;">
  </dd>

  <dt>
    Director
  </dt>
  <dd>
    <% dir_id = @the_movie.director_id %>
    
    <% matching_directors = Director.where({ :id => dir_id }) %>
    
    <% the_director = matching_directors.at(0) %>
      <% if(the_director == nil) %>
         Uh oh! We weren't able to find a driector for this movie
      <% else %>
         <%= the_director.name %>
    <% end %>
   

  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= @the_movie.created_at %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @the_movie.updated_at %>
  </dd>
</dl>

<hr>
