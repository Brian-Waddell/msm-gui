<h1>
  List of all directors
</h1>

<hr>
<hr>
<form action = "/insert_director" method = "post">
  <div>
  <label for= "director_name" >
    Name 
  </label>
  <input id = "director_name" type = "text" name = "the_name" >
  </div>
  <div>
  <label for= "director_dob" >
    Dob
  </label>
  <input id = "director_dob" type = "date" name = "the_birth"  >
  </div>
  <div>
  <label for= "director_bio" >
    Bio
  </label>
  <input id = "director_bio" type = "text" name = "the_bio" >
  </div>
  <div>
  <label for= "director_image" >
    Image
  </label>
  <input id = "director_image" type = "text" name = "the_image" >
  </div>
  <button> Create Director </button>
</form>
<hr> 

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_directors.each do |director| %>
  <tr>
    <td>
      <%= director.id %>
    </td>

    <td>
      <img src="<%= director.image %>" style="width:250px;">
    </td>

    <td>
      <%= director.name %>
    </td>

    <td>
      <%= director.dob %>
    </td>

    <td>
      <a href="/directors/<%= director.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
